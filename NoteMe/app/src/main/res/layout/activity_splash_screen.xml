<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rokomari_poc.noteme.SplashScreenActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C5EFF7"
        >

        <ImageView
            android:id="@+id/imageview_splash_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/splash_icon"
            />

        <TextView
            android:id="@+id/textview_note_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Note me"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_below="@+id/imageview_splash_image"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#481010"
            android:layout_marginTop="15dp"
            />


    </RelativeLayout>





</android.support.constraint.ConstraintLayout>
